<%= render "scottish_mappings_header" %>

<table class="table">
<thead>
  <tr>
    <th>#</th>
    <th><%= sortable("name", "Register Office Name") %></th>
    <th><%= sortable("council", "Council") %></th>
    <th><%= sortable("reg_id", "Registration District Number") %></th>
    <th><%= sortable("type", "Type") %></th>
  </tr>
</thead>

<% @mappings.each_with_index do |mapping, index| %>
<tr>
  <td><%= index + 1 %></td>
  <td><%= mapping.name %></td>
  <td><%= mapping.council %></td>
  <td><%= mapping.reg_id %></td>
  <td><%= mapping.type %></td>
</tr>
<% end %>
</table>
